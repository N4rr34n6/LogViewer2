<Window x:Class="LogViewer2.WindowLine"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LogViewer2"
        mc:Ignorable="d"
        Title="Line" Height="300" Width="700" Icon="Icons/Line.png" WindowStartupLocation="CenterOwner"  MinHeight="200" MinWidth="300">
    
    <Grid Margin="10,10,10,10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="22" />
        </Grid.RowDefinitions>

        <TextBox x:Name="textLine" FontFamily="Consolas" Margin="0,0,0,5" TextWrapping="Wrap" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Width="Auto" AcceptsReturn="True" Text="" IsReadOnly="True"/>

        <WrapPanel Grid.Row="2" HorizontalAlignment="Right" Margin="0,0,0,0">
            <Button IsCancel="True" Name="btnCancel" MinWidth="60" Margin="0,0,0,0">_Close</Button>
        </WrapPanel>

    </Grid>
    </Window>
